# CloudToLocalLLM CI/CD Agent Configuration

# Basic Configuration
NODE_ENV=production
CICD_PORT=3001
PROJECT_ROOT=/opt/cloudtolocalllm
LOG_LEVEL=info

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_TOKEN=your_github_token_here

# Build Configuration
BUILD_TIMEOUT=3600000
MAX_CONCURRENT_BUILDS=2
ENABLE_NOTIFICATIONS=true

# Security Configuration
CICD_API_KEYS=your_api_key_here,another_api_key_here
JWT_SECRET=your_jwt_secret_here
ALLOWED_IPS=127.0.0.1,::1
# BLOCKED_IPS=

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=cicd@cloudtolocalllm.online
NOTIFICATION_EMAIL_RECIPIENTS=admin@cloudtolocalllm.online,dev@cloudtolocalllm.online

# Webhook Notifications (Optional)
NOTIFICATION_WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Database Configuration (Future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/cicd_agent

# Redis Configuration (Future use for caching)
# REDIS_URL=redis://localhost:6379

# Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here
