# Stage 1: Build the Flutter web app
FROM ghcr.io/cirruslabs/flutter:latest AS build

# Create a non-root user for the build
RUN groupadd -r flutteruser && useradd --no-log-init -r -g flutteruser -m -s /bin/bash flutteruser

# Switch to flutteruser
USER flutteruser
WORKDIR /app

# As flutteruser, mark the root-owned SDK directory as safe for git operations
# This ensures the config is applied to flutteruser's git environment
RUN git config --global --add safe.directory /sdks/flutter

# Copy application code (now as flutteruser, into flutteruser's WORKDIR /app)
# Files will be owned by flutteruser.
COPY . .

# Run the build as flutteruser
# Flutter should use a user-writable cache for pub get.
RUN flutter pub get && flutter build web --release

# Stage 2: Serve the app with Nginx
FROM nginx:alpine
COPY --from=build /app/build/web /usr/share/nginx/html
COPY config/nginx/nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"] 