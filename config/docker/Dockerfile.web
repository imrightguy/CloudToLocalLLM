# Use the latest stable Flutter image from ghcr.io
FROM ghcr.io/cirruslabs/flutter:latest AS build

# Create a non-root user and group
RUN groupadd -r flutteruser && useradd --no-log-init -r -g flutteruser -m -s /bin/bash flutteruser

# Give flutteruser write access to the ENTIRE Flutter SDK directory for the build
USER root
RUN chown -R flutteruser:flutteruser /sdks/flutter

# Set up the app directory and copy source code
USER root 
RUN mkdir -p /app
WORKDIR /app 
COPY . ./ # Copy project files to /app, ensuring destination is treated as a directory
RUN chown -R flutteruser:flutteruser /app # Change ownership of all app files

# Switch to non-root user for subsequent operations
USER flutteruser

# Mark Flutter SDK directory as safe for git operations by non-root user
# This is now owned by flutteruser, but doesn't hurt to keep for clarity
RUN git config --global --add safe.directory /sdks/flutter

RUN flutter pub get && flutter build web --release

# Final stage with Nginx
FROM nginx:alpine
# Copy built web app from build stage
COPY --from=build /app/build/web /usr/share/nginx/html

# Copy custom Nginx configuration
COPY config/nginx/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"] 